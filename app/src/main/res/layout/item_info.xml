<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/labelView"
        style="@style/AppTheme.FCM.Info.Label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="label" />

    <TextView
        android:id="@+id/valueView"
        style="@style/AppTheme.FCM.Info.Value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelView"
        tools:text="Value" />

    <TextView
        android:id="@+id/descriptionView"
        style="@style/AppTheme.FCM.Info.Description"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueView" />

    <ImageView
        android:id="@+id/shareView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_share"
        app:layout_constraintEnd_toStartOf="@+id/expandView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionView"
        android:contentDescription="@string/content_description_share" />

    <CheckedTextView
        android:id="@+id/expandView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="center_horizontal|bottom"
        android:checkMark="@drawable/expand_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionView" />

</androidx.constraintlayout.widget.ConstraintLayout>