<resources>
    <!-- Base application theme. -->
    <style name="Theme.FCMTestingTool" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FCMTestingTool.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FCMTestingTool.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FCMTestingTool.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Base.Label" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_info_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Base.Value" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_info_value</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme.About.Label" parent="AppTheme.Base.Label">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.About.Value" parent="AppTheme.Base.Value" />

    <style name="AppTheme.About.AppName" parent="AppTheme.About.Label">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.About.Description" parent="AppTheme.Base.Value">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.Info.Label" parent="AppTheme.Base.Label">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.Info.Value" parent="AppTheme.Base.Value">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Info.Description" parent="AppTheme.Base.Value">
        <item name="android:textSize">16sp</item>
    </style>

</resources>